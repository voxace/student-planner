html
  include partials/header.pug
  body
    include partials/nav.pug
    .container
      .row.justify-content-center.align-items-center#login-screen
        .col-8.login
          h3.loginTitle
            | Register or&nbsp;
            a(href="/auth/login") Login
          .row.socialButtons.justify-content-center
            .col-md-4
              a.btn.btn-lg.btn-block.btn-facebook(href="./facebook")
                i.fa.fa-facebook.visible-xs
                span.hidden-xs &nbsp;Facebook
            .col-md-4
              a.btn.btn-lg.btn-block.btn-twitter(href="./twitter")
                i.fa.fa-twitter.visible-xs
                span.hidden-xs &nbsp;Twitter
            .col-md-4
              a.btn.btn-lg.btn-block.btn-google(href="./google")
                i.fa.fa-google-plus.visible-xs
                span.hidden-xs &nbsp;Google+
          .row.loginOr
            .col-sm-12
              hr.hrOr
              span.spanOr or
          .row
            .col-sm-12
              form.form-group(action="", autocomplete="off", method="POST")
                .input-group
                  span.input-group-addon
                    i.fa.fa-user
                  if !errors
                    input.form-control.form-control-lg(type="text", name="name", placeholder="Full Name")
                  else
                    input.form-control.form-control-lg(type="text", name="name", placeholder="Full Name", value=values[0])
                if errors
                  each val in errors
                    if val.msg == 'Name is required'
                      div.help-block= val.msg
                    else
                      div.help-block
                else
                  div.help-block
                .input-group
                  span.input-group-addon
                    i.fa.fa-envelope
                  if !errors
                    input.form-control.form-control-lg(type="text", name="username", placeholder="Email Address")
                  else
                    input.form-control.form-control-lg(type="text", name="username", placeholder="Email Address", value=values[1])
                if errors
                  each val in errors
                    if val.msg == 'Email is not valid'
                      div.help-block= val.msg
                    else
                      div.help-block
                else
                  div.help-block
                .input-group
                  span.input-group-addon
                    i.fa.fa-lock
                  if !errors
                    input.form-control.form-control-lg(type="password", name="password", placeholder="Password")
                  else
                    input.form-control.form-control-lg(type="password", name="password", placeholder="Password", value=values[2])
                if errors
                  each val in errors
                    if val.msg == 'Password is required'
                      div.help-block= val.msg
                    else
                      div.help-block
                else
                  div.help-block
                .input-group
                  span.input-group-addon
                    i.fa.fa-lock
                  input.form-control.form-control-lg(type="password", name="password2", placeholder="Confirm Password")
                if errors
                  each val in errors
                    if val.msg == 'Passwords do not match'
                      div.help-block= val.msg
                    else
                      div.help-block
                else
                  div.help-block
                button.btn.btn-lg.btn-primary.btn-block(type="submit") Register
          .row.justify-content-center.align-items-center
            .col-sm-12.text-center
              p.forgotPwd
                a(href="#") Forgot password?
    include partials/footer.pug
